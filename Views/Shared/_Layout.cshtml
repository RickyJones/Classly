<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Classly</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Classly.styles.css" asp-append-version="true" />
    <style>
        .action-li {
            background-color: darkorange;
            border-radius: 8px;
        }

        .action-li-outline {
            border-color: darkorange;
            border-radius: 8px;
        }

        .rounded-pill {
            width: fit-content;
            padding-left: 10px;
            padding-right: 10px;
            padding-top: 8px;
            padding-bottom: 8px;
        }

        .btn-primary {
            background-color: darkorange;
            color: white;
        }

        p {
            color: dimgrey;
        }

        .bg-primary {
            background-color: darkorange !important;
        }

        .bg-secondary {
            background-color: #80808029 !important;
            color: grey;
        }

        .avatar-bg {
            background-color: #ff8c004f;
            width: 50px;
            height: 50px;
            border-radius: 30px;
        }

        .navbar-subs {
            border-top-color: orange;
            border-bottom-color: orange;
            border-bottom-style: solid;

        }
    </style>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-4">
            <div class="container-fluid">
                
                    <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Classly</a>

                <div class="d-sm-inline-flex justify-content-between">
                    <ul class="d-flex flex-row flex-wrap align-items-center list-unstyled mb-0">
                        @if (User.Identity != null && User.Identity.IsAuthenticated)
                        {
                            <li class="me-2 action-li">
                                <a class="nav-link text-white" asp-controller="Marketplace" asp-action="Basket">
                                    Basket <span id="basket-cnt" class="badge text-bg-danger"></span>
                                </a>
                            </li>
                            <li>
                                <a class="nav-link text-black" href="@Url.Action("Logout", "Login")">Logout</a>
                            </li>
                        }
                    </ul>
                </div>

            </div>
        </nav>
    </header>
    <div class="container">

        @if (User.Identity.IsAuthenticated)
        {
            <nav class="navbar navbar-subs navbar-expand-sm navbar-toggleable-sm navbar-light bg-white">
                <div class="container-fluid">

                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1 justify-content-center">
                        <li class="nav-item me-4">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Marketplace" asp-action="Index">Marketplace</a>
                        </li>
                        <li class="nav-item me-4">
                            <a class="nav-link text-dark" asp-area="" asp-controller="StudyLab" asp-action="Index">Study Lab</a>
                        </li>
                        <li class="nav-item me-4">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Community" asp-action="Index">Community</a>
                        </li>
                        <li class="nav-item me-4">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Messages" asp-action="Index">Messages</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
        }
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted" style="background-color: #1a1a1bf5;">
@*         <div class="container">
            &copy; 2025 - Classly - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
